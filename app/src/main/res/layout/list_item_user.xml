<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recycler_view_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_darker_grey"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                tools:src="@drawable/house_md"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/avatar"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/btn_follow"
                android:layout_toRightOf="@+id/avatar"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/accent"
                tools:text="gregory_house"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_toLeftOf="@+id/btn_follow"
                android:layout_toRightOf="@+id/avatar"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_secondary"
                tools:text="Dr. Gregory House"/>

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toLeftOf="@+id/btn_follow"
                android:layout_toRightOf="@+id/avatar"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_secondary"
                tools:text="Princeton-Plainsboro Teaching Hospitalities"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/btn_following"
                android:layout_alignLeft="@+id/btn_following"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:text="@string/follow"
                android:textSize="12sp"
                android:theme="@style/ArborButtonTeal"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:text="@string/following"
                android:textSize="12sp"
                android:theme="@style/ArborButtonGreen"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>